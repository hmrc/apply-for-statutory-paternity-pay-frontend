@import views.xml.pdf.section.declaration._
@import views.xml.pdf.component.Bullet

@this(
    signature: Signature,
    bullet: Bullet
)

@(model: JourneyModel)(implicit request: RequestHeader, messages: Messages)


<fo:block margin-top="8mm">
    <fo:block margin-bottom="4mm" font-weight="bold" font-size="18pt">@messages("pdf.declaration")</fo:block>

    <fo:block-container>
        <fo:block margin-bottom="4mm">@messages("pdf.declaration.adoption.declaration.1")</fo:block>
        <fo:block margin-bottom="4mm">@messages("pdf.declaration.adoption.declaration.2")</fo:block>
            <fo:list-block space-after="4mm">
                @bullet("pdf.declaration.adoption.declaration.2.bullet.1")
                @bullet("pdf.declaration.adoption.declaration.2.bullet.2")
                @bullet("pdf.declaration.adoption.declaration.2.bullet.3")
            </fo:list-block>
        <fo:block margin-bottom="4mm">@messages("pdf.declaration.adoption.declaration.3")</fo:block>
        <fo:block margin-bottom="4mm">@messages("pdf.declaration.adoption.declaration.4")</fo:block>
        <fo:block margin-bottom="4mm">@messages("pdf.declaration.adoption.declaration.5")</fo:block>
    </fo:block-container>

    @signature()

</fo:block>
