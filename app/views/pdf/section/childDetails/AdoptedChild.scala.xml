@import java.time.LocalDate
@import java.time.format.DateTimeFormatter
@import config.Formats
@import views.xml.pdf.section.declaration._

@this(
    signature: Signature
)

@(model: JourneyModel)(implicit request: RequestHeader, messages: Messages)

@dateTimeFormat(date: LocalDate) = {
    @Formats.dateTimeFormat()(messages.lang).format(date)
}

<fo:block-container margin-top="8mm">
    <!-- Baby details -->
    <fo:block font-size="18pt" font-weight="bold" margin-bottom="5mm">@messages("section.babyDetails")</fo:block>

    <fo:block-container>
        <fo:block-container margin-bottom="3mm">
            <fo:block>
                <fo:inline font-weight="bold">@messages("pdf.adoption.matchedDate"): </fo:inline>
                <fo:inline>@dateTimeFormat(model.dueDate)</fo:inline> <!-- TODO Should not be due date -->
            </fo:block>
        </fo:block-container>
    </fo:block-container>

    <!-- TODO Only one of the two following blocks will ever be displayed -->
    <fo:block-container>
        <fo:block-container margin-bottom="3mm">
            <fo:block>
                <fo:inline font-weight="bold">@messages("pdf.adoption.placementDate"): </fo:inline>
                <fo:inline>@dateTimeFormat(model.dueDate)</fo:inline> <!-- TODO Should not be due date -->
            </fo:block>
        </fo:block-container>
    </fo:block-container>

    <fo:block-container>
        <fo:block-container margin-bottom="3mm">
            <fo:block>
                <fo:inline font-weight="bold">@messages("pdf.adoption.expectedPlacementDate"): </fo:inline>
                <fo:inline>@dateTimeFormat(model.dueDate)</fo:inline> <!-- TODO Should not be due date -->
            </fo:block>
        </fo:block-container>
    </fo:block-container>

</fo:block-container>
