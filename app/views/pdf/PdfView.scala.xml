@import java.time.LocalDate
@import java.time.format.DateTimeFormatter
@import config.Formats
@import views.xml.pdf.section._
@import views.xml.pdf.section.declaration._
@import views.xml.pdf.section.childDetails._
@import views.xml.pdf.section.paternityDetails._

@this(
    layout: Layout,
    header: views.xml.pdf.section.Header,
    personalDetails: views.xml.pdf.section.PersonalDetails,
    birthDeclaration: BirthDeclaration,
    adoptionDeclaration: AdoptionDeclaration,
    parentalOrderDeclaration: ParentalOrderDeclaration,
    birthChild: BirthChild,
    adoptedChild: AdoptedChild,
    adoptedFromAbroadChild: AdoptedFromAbroadChild,
    preApril24PaternityDetails: PreApril24PaternityDetails,
    postApril24PaternityDetails: PostApril24PaternityDetails,
    instructionPage: InstructionPage
)

@(model: JourneyModel)(implicit request: RequestHeader, messages: Messages)

@dateTimeFormat(date: LocalDate) = {
        @Formats.dateTimeFormat()(messages.lang).format(date)
}

<fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format" xmlns:fox="http://xmlgraphics.apache.org/fop/extensions" font-family="sans-serif">

    @layout()

    <fo:page-sequence master-reference="main">

        @header()

        <!-- Body -->
        <fo:flow flow-name="xsl-region-body">
            <fo:block-container>

                @personalDetails(model)

                @birthChild(model)
<!--                @@adoptedChild(model)-->
<!--                @@adoptedFromAbroadChild(model)-->

                @preApril24PaternityDetails(model)
<!--                @@postApril24PaternityDetails(model)-->

            </fo:block-container>

            @birthDeclaration(model)
<!--            @@adoptionDeclaration(model)-->
<!--            @@parentalOrderDeclaration(model)-->
        </fo:flow>

    </fo:page-sequence>

    @instructionPage()

</fo:root>